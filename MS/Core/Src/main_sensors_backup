/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_FATFS_Init();
  /* USER CODE BEGIN 2 */

	// Delay inicial para estabilización del sistema
	HAL_Delay(500);

	// Inicializar sensores con reintentos
	bool kx134_ok = false;
	bool ms5611_ok = false;

	// Intentar inicializar KX134
	kx134_ok = KX134_Init(&kx134, &hspi1, GPIOB, GPIO_PIN_1);
	if (kx134_ok) {
		HAL_Delay(50);
		kx134_ok = KX134_CheckID(&kx134);
		if (kx134_ok) {
			HAL_Delay(10);
			kx134_ok = KX134_Configure(&kx134, 0); // ±8g
			if (kx134_ok) {
				HAL_Delay(10);
				kx134_ok = KX134_Enable(&kx134);
			}
		}
	}

	// Intentar inicializar MS5611
	ms5611_ok = MS5611_Init(&ms5611, &hspi1, GPIOC, GPIO_PIN_4);

	if (ms5611_ok) {
		// Verificación adicional: leer un coeficiente PROM
		HAL_Delay(50);
		uint16_t test_coef = MS5611_ReadPROMValue(&ms5611, 1);
		if (test_coef == 0x0000 || test_coef == 0xFFFF) {
			ms5611_ok = false;
		}
	}

	// Obtener ID del KX134 para logging
	uint8_t kx_id = kx134_ok ? 0x46 : 0x00;

	// Obtener primer coeficiente del MS5611 para logging
	uint16_t ms_prom0 = ms5611_ok ? ms5611.calibration[0] : 0x0000;

	// Inicializar SDLogger
	if (!SDLogger_Init(&sdLogger)) {
	  // Error al inicializar SD - parpadeo rápido de error
	  while (1) {
		  HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_12);
		  HAL_Delay(100);
	  }
	}

	// Crear archivo de debug
	if (!SDLogger_CreateDebugFile(&sdLogger)) {
	  SDLogger_Deinit(&sdLogger);
	  while (1) {
		  HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_12);
		  HAL_Delay(100);
	  }
	}

	// Escribir header y datos iniciales con diagnóstico
	SDLogger_WriteHeader(&sdLogger, "=== Debug Session Start ===\r\n");
	SDLogger_WriteSensorData(&sdLogger, kx_id, ms_prom0);

	// Agregar información de diagnóstico
	char diag_msg[128];
	snprintf(diag_msg, sizeof(diag_msg), "INIT STATUS: KX134=%s MS5611=%s",
		   kx134_ok ? "OK" : "FAIL", ms5611_ok ? "OK" : "FAIL");
	SDLogger_WriteText(&sdLogger, diag_msg);

	if (!kx134_ok) {
	  uint8_t kx_actual_id = KX134_ReadRegister(&kx134, 0x13);
	  snprintf(diag_msg, sizeof(diag_msg), "KX134 DEBUG: ID_READ=0x%02X EXPECTED=0x46", kx_actual_id);
	  SDLogger_WriteText(&sdLogger, diag_msg);
	}

	if (!ms5611_ok) {
	  snprintf(diag_msg, sizeof(diag_msg), "MS5611 DEBUG: PROM0=0x%04X (should not be 0x0000/0xFFFF)", ms_prom0);
	  SDLogger_WriteText(&sdLogger, diag_msg);
	}

	if (kx134_ok && ms5611_ok) {
	  // ÉXITO: Leer datos de sensores continuamente
	  while (1) {
		  // Leer datos del acelerómetro
		  KX134_AccelData_t accel_data;
		  bool accel_read_ok = KX134_ReadAccelG(&kx134, &accel_data);

		  // Leer datos del MS5611
		  MS5611_Data_t ms_data;
		  bool ms_read_ok = MS5611_ReadData(&ms5611, &ms_data);

		  // Crear mensaje de datos
		  char data_msg[256];
		  if (accel_read_ok && ms_read_ok) {
			  // Convertir floats a enteros para evitar %.f
			  int32_t accel_x_int = (int32_t)(accel_data.x * 100); // x100 para 2 decimales
			  int32_t accel_y_int = (int32_t)(accel_data.y * 100);
			  int32_t accel_z_int = (int32_t)(accel_data.z * 100);
			  int32_t temp_int = (int32_t)(ms_data.temperature * 10); // x10 para 1 decimal
			  int32_t press_int = (int32_t)(ms_data.pressure * 10);

			  snprintf(data_msg, sizeof(data_msg),
					   "ACCEL: X=%ld.%02ldg Y=%ld.%02ldg Z=%ld.%02ldg | MS5611: T=%ld.%ldC P=%ld.%ldmbar Alt=%ldm",
					   accel_x_int/100, abs(accel_x_int%100),
					   accel_y_int/100, abs(accel_y_int%100),
					   accel_z_int/100, abs(accel_z_int%100),
					   temp_int/10, abs(temp_int%10),
					   press_int/10, abs(press_int%10),
					   ms_data.altitude);
		  } else {
			  snprintf(data_msg, sizeof(data_msg),
					   "ERROR LECTURA: KX134=%s MS5611=%s",
					   accel_read_ok ? "OK" : "FAIL",
					   ms_read_ok ? "OK" : "FAIL");
		  }

		  SDLogger_WriteText(&sdLogger, data_msg);
		  HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_12); // LED ON/OFF
		  HAL_Delay(1000);
	  }
	} else {
	  // ERROR: Sensores no inicializados correctamente
	  while (1) {
		  char error_msg[128];
		  snprintf(error_msg, sizeof(error_msg),
				   "INIT ERROR: KX134=%s MS5611=%s",
				   kx134_ok ? "OK" : "FAIL",
				   ms5611_ok ? "OK" : "FAIL");

		  SDLogger_WriteText(&sdLogger, error_msg);
		  HAL_GPIO_TogglePin(GPIOB, GPIO_PIN_12);
		  HAL_Delay(500);
	  }
	}

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
	while (1)
	{
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	}
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

/* USER CODE BEGIN 4 */

/* USER CODE END 4 */

